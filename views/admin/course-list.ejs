<% layout('layouts/boilerplate') %>

<div class="container my-4">
  <h2>ğŸ« Daftar Kelas Dosen</h2>

  <a href="/admin/courses/new" class="btn btn-primary mb-3">+ Tambah Kelas</a>

  <table class="table table-bordered mt-3">
    <thead class="table-dark">
      <tr>
        <th>Nama Kelas</th>
        <th>Kode</th>
        <th>Semester</th>
        <th>Tahun Akademik</th>
        <th>Dosen Pengampu</th>
        <th>Mahasiswa Terdaftar</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% courses.forEach(course => { %>
      <tr>
        <td><%= course.name %> (<%= course.class %>)</td>
        <td><%= course.code %></td>
        <td><%= course.semester %></td>
        <td><%= course.academicYear %></td>
        <td><%= course.lecturer?.name || '-' %></td>
        <td><%= course.students.length %> Mahasiswa</td>

        <td>
          <a href="/admin/courses/<%= course._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <form action="/admin/courses/<%= course._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus?')">Hapus</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
