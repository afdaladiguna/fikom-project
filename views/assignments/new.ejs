<% layout('layouts/boilerplate.ejs') %>

<div class="row">
  <h1 class="text-center">Tambah Tugas untuk Mata Kuliah <%= course.name %></h1>
  <div class="col-md-6 offset-md-3">
    <form action="/courses/<%= course._id %>/assignments" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Judul Tugas</label>
        <input class="form-control" type="text" id="title" name="assignment[title]" required />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Deskripsi</label>
        <textarea class="form-control" id="description" name="assignment[description]" rows="4" required></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label" for="dueDate">Tanggal Deadline</label>
        <input class="form-control" type="datetime-local" id="dueDate" name="assignment[dueDate]" required />
      </div>

      <div class="mb-3">
        <label class="form-label" for="category">Kategori Tugas</label>
        <select class="form-select" id="category" name="assignment[category]" required>
          <option disabled selected value="">Pilih Kategori</option>
          <option value="Mid">Mid</option>
          <option value="Final">Final</option>
          <option value="Assignment">Assignment</option>
          <option value="Quiz">Quiz</option>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label d-block">Jenis Tugas</label>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="assignment[type]" id="individual" value="Individual" required />
          <label class="form-check-label" for="individual">Individu</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="assignment[type]" id="group" value="Group" required />
          <label class="form-check-label" for="group">Kelompok</label>
        </div>
      </div>

      <div class="mb-3 py-2">
        <button class="btn btn-success">Simpan</button>
      </div>
    </form>
  </div>
</div>
