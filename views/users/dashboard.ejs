<% layout('layouts/boilerplate') %>

<h1 class="mb-4">Dashboard Dosen</h1>

<h2 class="fs-4 mb-3">Mata Kuliah yang Diampu</h2>
<ul class="list-group mb-4">
  <% for (let course of courses) { %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
      <strong><%= course.name %></strong> (<%= course.code %>)
      <br />
      <small>Kelas: <%= course.class %> | Semester: <%= course.semester %></small>
    </div>
    <div>
      <span class="badge bg-primary me-2">👥 <%= course.students.length %> Mahasiswa</span>
      <span class="badge bg-success">📝 <%= course.assignments.length %> Tugas</span>
    </div>
  </li>
  <% } %>
</ul>

<h2 class="fs-4 mb-3">Deadline Tugas Terdekat</h2>
<ul class="list-group">
  <% if (upcomingAssignments.length === 0) { %>
  <li class="list-group-item">Tidak ada tugas mendatang.</li>
  <% } else { %> <% for (let a of upcomingAssignments) { %>
  <li class="list-group-item">
    <strong><%= a.title %></strong> - <%= a.course.name %>
    <br />
    <small>Batas akhir: <%= a.dueDate.toLocaleDateString() %></small>
  </li>
  <% } %> <% } %>
</ul>
