<% layout('layouts/boilerplate.ejs') %>
<h1 class="fs-2 pb-3">Mata Kuliah yang Kamu Ikuti</h1>

<div class="row">
  <% for (let course of courses) { %>
  <div class="col-lg-4">
    <div class="card mb-4" style="height: 18rem">
      <div class="card-body">
        <h5 class="card-title"><%= course.name %> (<%= course.code %>)</h5>
        <p class="card-text mb-1"><strong>Kelas:</strong> <%= course.class %></p>
        <p class="card-text mb-1"><strong>Dosen Pengampu:</strong> <%= course.lecturer.name %></p>
        <p class="card-text mb-1"><strong>Semester:</strong> <%= course.semester %></p>
        <p class="card-text"><%= truncate(course.description, 100) %></p>
      </div>
      <div class="card-footer">
        <a href="/courses/<%= course._id %>" class="btn btn-sm btn-warning">Lihat Detail</a>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
  <% function truncate(text, maxLength) {
    if (text && text.length > maxLength) {
      return text.slice(0, maxLength) + '...';
    }
    return text;
  } %>
</script>
